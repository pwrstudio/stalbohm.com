{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getLanguage ?: 'en' }}">

    <head>
        {% block head %}
            {% include 'partials/head.html.twig' %}
        {% endblock %}
    </head>

    <body>

        {% block content %}{% endblock %}

        <script>
            // Show about text
            document.getElementById('headline').addEventListener('click', function(e) {
                document.getElementById('header').classList.toggle('open')
            })

            // Slideshow mechanics

            // Get all item containers
            var items = document.getElementsByClassName('item')

            // Show first image if no hash is specified
            if(!window.location.hash) {
                window.location.hash = '#' + items[0].id
            }

            // Loop over all item containers and set the link to the next image
            for(var i = 0; i < items.length; i++) {
                var thisLink = items[i].getElementsByClassName('item--link')[0]
                var slug = ''
                if(i === items.length - 1) {
                    slug = items[0].id
                } else {
                    slug = items[i+1].id
                }
                thisLink.href = '#' + slug
            }
        </script>
        {# {{ assets.js }} #}
    </body>
</html>
